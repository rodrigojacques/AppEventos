<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CadastroLocalActivity"
    >

    <TextView
        android:id="@+id/textViewNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NOME"
        android:textSize="18sp"
        android:textColor="@color/preto"
        android:fontFamily="serif-monospace"/>

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewCidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CIDADE"
        android:textSize="18sp"
        android:textColor="@color/preto"
        android:fontFamily="serif-monospace"/>

    <EditText
        android:id="@+id/editTextCidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewBairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BAIRRO"
        android:textSize="18sp"
        android:textColor="@color/preto"
        android:fontFamily="serif-monospace"/>

    <EditText
        android:id="@+id/editTextBairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textViewCapacidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CAPACIDADE"
        android:textSize="18sp"
        android:textColor="@color/preto"
        android:fontFamily="serif-monospace"/>

    <EditText
        android:id="@+id/editTextCapacidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberSigned" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_voltar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:onClick="onClickVoltar"
            android:text="Voltar"
            android:background="@color/azul"
            android:textColor="@color/branco"
            android:textSize="18sp"
            app:layout_constraintBaseline_toBaselineOf="@+id/btn_salvar"
            app:layout_constraintEnd_toStartOf="@+id/btn_salvar"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_salvar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:background="@color/azul"
            android:onClick="onClickSalvar"
            android:text="Salvar"
            android:textColor="@color/branco"
            android:textSize="18sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btn_voltar" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textViewEndereco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EndereÃ§o"
        android:textSize="36sp"
        android:textColor="@color/preto"
        android:fontFamily="monospace"/>

    <TextView
        android:id="@+id/textView_nome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/preto"
        android:fontFamily="serif-monospace"/>

    <TextView
        android:id="@+id/textView_cidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/preto"
        android:fontFamily="serif-monospace"/>

    <TextView
        android:id="@+id/textView_bairro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/preto"
        android:fontFamily="serif-monospace"/>

    <TextView
        android:id="@+id/textView_capacidade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/preto"
        android:fontFamily="serif-monospace"/>

</LinearLayout>